@model IEnumerable<Student>

@{
    ViewData["Title"] = "Add Student";
}

<!-- ==== CUSTOM STYLES FOR REGISTER FORM ==== -->
<style>
    main {
        padding: 20px;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 25px;
        color: #f3f4f6;
    }

    .register-container {
        max-width: 500px;
        background: rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 500;
        color: #d1d5db;
    }

    select {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: none;
        background-color: #1f1f1f;
        color: #f3f3f3;
        font-size: 1rem;
    }

        select:focus {
            outline: 2px solid #3b82f6;
            background-color: #1a1a1a;
        }

    .btn-register {
        background-color: #2563eb;
        color: white;
        border: none;
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-register:hover {
            background-color: #1d4ed8;
            transform: scale(1.03);
        }
</style>

<!-- ==== VIEW CONTENT ==== -->
<h2>Register Students to @ViewBag.SubjectName</h2>

<div class="register-container">
    <form method="post" action="@Url.Action("RegisterStudent", "Professor")">
        <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" />

        <div class="form-group">
            <label>Select Student:</label>
            <select name="studentId" required>
                @foreach (var student in Model)
                {
                    <option value="@student.StudentID">@student.Name (Fingerprint ID: @student.FingerprintID)</option>
                }
            </select>
        </div>

        <button type="submit" class="btn-register">➕ Register</button>
    </form>
</div>
