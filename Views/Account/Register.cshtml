@model AttendanceSystem.ViewModels.RegisterVM
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Fingerprint Attendance System</title>
    <link rel="icon" type="png" href="~/favicon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-img">
    <main class="form-signin w-100 m-auto" style="max-width: 400px;">
        <form asp-action="Register" method="post" class="p-4 rounded shadow bg-glass" novalidate>
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>
            <div class="text-center mb-3">
                <img src="~/favicon.png" alt="Logo" class="mb-2" width="80px">
                <h1 class="h4 mb-3 fw-normal">Please register</h1>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="FullName" class="form-control bg-glass" id="floatingName" placeholder="Filan Fisteku" required>
                <label for="floatingName" class="bg-trans">Full Name</label>
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="email" asp-for="Email" class="form-control bg-glass" id="floatingInput" placeholder="name@example.com" required>
                <label for="floatingInput" class="bg-trans">Email address</label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="Password" class="form-control bg-glass" id="floatingPassword" placeholder="Password" required>
                <label for="floatingPassword" class="bg-trans">Password</label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-floating mb-3">
                <div>
                    <input type="radio" asp-for="Role" value="Admin" id="roleAdmin" />
                    <label for="roleAdmin">Admin</label>
                </div>
                <div>
                    <input type="radio" asp-for="Role" value="Professor" id="roleProfessor" />
                    <label for="roleProfessor">Professor</label>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Register</button>
            </div>
         
        </form>
    </main>
</body>
</html>