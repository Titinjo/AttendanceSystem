@model IEnumerable<AttendanceSystem.Models.ApplicationUser>

<head>
    <style>
        main {
            padding: 20px;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 25px;
            color: #f3f4f6;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        }

            .table thead {
                background-color: #1f2937;
            }

            .table th,
            .table td {
                padding: 14px 16px;
                text-align: left;
                border-bottom: 1px solid #2a2a2a;
            }

            .table th {
                color: #93c5fd;
                font-weight: 600;
            }

            .table tbody tr:hover {
                background-color: #1e293b;
            }

        .no-data {
            color: #9ca3af;
            background: rgba(255, 255, 255, 0.03);
            padding: 15px;
            border-radius: 8px;
            font-style: italic;
            margin-top: 20px;
        }

        .alert-success {
            background-color: #16a34a;
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-weight: 500;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

    </style>

</head>
<h2>All Professors</h2>

@if (Model.Any())
{
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var professor in Model)
            {
                <tr>
                    <td>@professor.FullName</td>
                    <td>@professor.UserName</td>
                    <td>@professor.Email</td>
                    <td>
                        <form asp-action="RemoveProfessor" asp-controller="Professor" method="post">
                            <input type="hidden" name="professorID" value="@professor.Id" />
                            <button type="submit" class="btn-remove" onclick="return confirm('Are you sure you want to remove this professor?');">Remove</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="no-data">📭 No professors found.</p>
}