@model IEnumerable<Student>

<head>
    <style>
        main {
            padding: 20px;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #f3f4f6;
        }

        .btn-add {
            display: inline-block;
            background-color: #2563eb;
            color: #fff;
            padding: 10px 16px;
            border-radius: 6px;
            font-weight: 500;
            text-decoration: none;
            margin-bottom: 25px;
            transition: background 0.2s ease, transform 0.2s ease;
        }

            .btn-add:hover {
                background-color: #1d4ed8;
                transform: scale(1.03);
            }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        }

        th, td {
            padding: 14px 16px;
            text-align: left;
            border-bottom: 1px solid #2a2a2a;
        }

        thead {
            background-color: #1f2937;
        }

        th {
            color: #93c5fd;
            font-weight: 600;
        }

        tr:hover {
            background-color: #1e293b;
        }

        .action-links a {
            color: #60a5fa;
            text-decoration: none;
            margin-right: 12px;
            font-weight: 500;
        }

            .action-links a:hover {
                text-decoration: underline;
                color: #93c5fd;
            }
    </style>
</head>

<h2>Student List</h2>

<a asp-controller="Student" asp-action="AddStudent" class="btn-add"><i class="fa-solid fa-plus"></i> Add New Student</a>

<table>
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Fingerprint ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.Name</td>
                <td>@student.FingerprintID</td>
                <td class="action-links">
                    <a href="#"
                       data-student-id="@student.StudentID"
                       data-student-name="@student.Name"
                       onclick="openDeleteModal(this)">🗑 Delete</a>

                    <a href="@Url.Action("EditStudent", "Student", new { id = student.StudentID })">✏️ Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Hidden delete form -->
<form id="deleteForm" method="post" asp-action="DeleteStudent" asp-controller="Student">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteStudentId" />
</form>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: #1f2937; color: #fff;">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="studentNameDisplay"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="submitDeleteForm()">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Script Section -->
@section Scripts {
    <script>
        let selectedStudentId = null;

        function openDeleteModal(link) {
            selectedStudentId = link.getAttribute("data-student-id");
            const studentName = link.getAttribute("data-student-name");
            document.getElementById("studentNameDisplay").textContent = studentName;

            const modal = new bootstrap.Modal(document.getElementById("confirmDeleteModal"));
            modal.show();
        }

        function submitDeleteForm() {
            document.getElementById("deleteStudentId").value = selectedStudentId;
            document.getElementById("deleteForm").submit();
        }
    </script>
}
