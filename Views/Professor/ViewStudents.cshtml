@model IEnumerable<Student>

<!-- ==== DARK THEME STYLES FOR STUDENT LIST ==== -->
<style>
    main {
        padding: 20px;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #f3f4f6;
    }

    .student-table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        margin-bottom: 30px;
    }

        .student-table thead {
            background-color: #1f2937;
        }

        .student-table th,
        .student-table td {
            padding: 16px;
            text-align: left;
        }

        .student-table th {
            color: #93c5fd;
            font-weight: 600;
            font-size: 1rem;
        }

        .student-table tbody tr {
            border-bottom: 1px solid #2d2d2d;
            transition: background 0.2s ease;
        }

            .student-table tbody tr:hover {
                background-color: #1e293b;
            }

    .no-students {
        text-align: center;
        padding: 20px;
        color: #9ca3af;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        color: #fff;
        border: none;
        cursor: pointer;
        transition: background 0.2s ease, transform 0.2s ease;
    }

    .btn-remove {
        background-color: #dc2626;
    }

        .btn-remove:hover {
            background-color: #b91c1c;
            transform: scale(1.03);
        }

    .btn-register {
        background-color: #2563eb;
        margin-top: 20px;
    }

        .btn-register:hover {
            background-color: #1d4ed8;
            transform: scale(1.03);
        }
</style>

<!-- ==== VIEW CONTENT ==== -->
<h2>Students in @ViewBag.SubjectName</h2>

<table class="student-table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Fingerprint ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.FingerprintID</td>
                    <td>
                        <a href="@Url.Action("RemoveStudent", "Professor", new { subjectId = ViewBag.SubjectId, studentId = student.StudentID })"
                           onclick="return confirm('Are you sure you want to remove this student from the subject?')"
                           class="btn btn-remove">🗑️ Remove</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="no-students">📭 No students are currently registered in this subject.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Register Button -->
<a href="@Url.Action("RegisterStudent", "Professor", new { subjectId = ViewBag.SubjectId })">
    <button class="btn btn-register">➕ Register Student</button>
</a>
