@{
    ViewData["Title"] = "Home Page";
}

<div class="cards">
    <div class="card">
        <h6>@Model.StudentsCount</h6>
        <p>Students</p>
    </div>
    <div class="card">
        <h6>@Model.ProfessorsCount</h6>
        <p>Professors</p>
    </div>
    <div class="card"></div>
    <div class="card"></div>
</div>

<div style="display: flex; gap: 20px; align-items: flex-start; justify-content: center;">
    <div style="flex: 1; max-width: 500px;">
        <h3>Attendance Status per Subject</h3>
        <img src="~/img/graph_attendance_status.png" alt="Attendance Status Graph" style="max-width: 100%; height: auto;" />
    </div>
    <div style="flex: 1; max-width: 500px;">
        <h4>Total Attendance per Subject</h4>
        <img src="~/img/graph_total_attendance.png" alt="Total Attendance Graph" style="max-width: 100%; height: auto;" />
    </div>
</div>
